<Window x:Class="TimelonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimelonWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        WindowStyle = "None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <!--TODO: Сделать так, чтобы картинки-кнопки отображались и работали-->
    <!--TODO: Добавить функционал кнопкам-->
    <!--TODO: Добавить информацю о карточках-->
    
    <Border Background="#272537"
            CornerRadius="10">
        <Grid Margin="10,0,-10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Timelon"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="22"/>

            <StackPanel x:Name="MenuPanel"
                Grid.Row="1">
                <RadioButton x:Name="TaskButton"
                             Content="Задачи"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>
                <RadioButton Content="Важные"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

            </StackPanel>

            <!--Создать список-->
            <TextBox x:Name="AddListTextbox"
                     Grid.Row="2"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="10,5,5,5"
                     TextInput="AddListTextbox_TextInput"
                     Style="{StaticResource AddListTextBox}"/>
            
            
            <!--TODO: По нажатию этой кнопки добавить событие - сгенерировать новый радиобатн в списке-->

            <Button x:Name="AddListButton"
                    Height="20"
                    Width="20"
                    Margin="5"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Style="{StaticResource AddButtonTheme}"
                    Click="Button_Click_AddList">
            </Button>

            <!--Создать карточку дела-->
            
            <TextBox x:Name="AddCardTextbox"
                     Grid.Row="2"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="10,5,5,5"
                     Style="{StaticResource AddCardTextBox}"/>
            
            <!--TODO: По нажатию этой кнопки добавить новую карточку в текущий список-->

            <Button x:Name="AddCardButton"
                    Height="20"
                    Width="20"
                    Margin="5"
                    Grid.Column="1"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Style="{StaticResource AddButtonTheme}">
            </Button>

            <!--Поиск-->
            
            <TextBox x:Name="SearchTextBox"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="10,5,5,5"
                     Style="{StaticResource SearchTextBox}"/>

            <!--По нажатию этой кнопки осуществить поиск по всем карточкам-->
            <Button x:Name="SearchButton"
                    Height="20"
                    Width="20"
                    Margin="5"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchButtonTheme}">
            </Button>
            
        </Grid>

    </Border>
</Window>
