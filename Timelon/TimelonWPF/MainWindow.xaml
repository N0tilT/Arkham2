<Window x:Class="TimelonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimelonWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbCards" Grid.ColumnSpan="2" HorizontalAlignment="Right" Height="312" Margin="0,10,52,0" TextWrapping="Wrap" Width="455" VerticalAlignment="Top"/>
        <TextBox x:Name="tbLists" Grid.ColumnSpan="2" Height="312" Margin="10,10,0,0" TextWrapping="Wrap" Width="210" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Grid.ColumnSpan="2" Content="Новая карточка" HorizontalAlignment="Left" Margin="63,351,0,0" VerticalAlignment="Top" Width="186" Click="Button_Click"/>

    </Grid>
</Window>
