<Window x:Class="TimelonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimelonWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        WindowStyle = "None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <!--TODO: Сделать так, чтобы картинки-кнопки отображались и работали-->
    <!--TODO: Добавить функционал кнопкам-->
    <!--TODO: Добавить информацю о карточках-->
    
    <Border Background="#272537"
            CornerRadius="10">
        <Grid Margin="10,0,-10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Timelon"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="22"/>

            <StackPanel x:Name="MenuPanel"
                Grid.Row="1">
                <RadioButton x:Name="TaskButton"
                             Content="Задачи"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             IsChecked="True"
                             Style="{StaticResource MenuButtonTheme}"
                             Click="ListMenuButton_Click"/>
                <RadioButton Content="Важные"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Click="ListMenuButton_Click"/>

            </StackPanel>

            <StackPanel x:Name="CardsPanel"
                        Grid.Column="1"
                        Grid.Row="1">
                
            </StackPanel>
            
            <!--Создать список-->
            <Border CornerRadius="10"
                    Background="#353340"
                    Width="200" Height="40"
                    Grid.Row="2"
                    Margin="-10,0,10,0">
                <Grid>
                    <TextBlock x:Name="TemplateList"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Text="Создать список"
                                Margin="10,0,0,0"
                                FontSize="11"
                                Foreground="DarkGray"/>
                    <TextBox x:Name="AddListTextbox"
                             Width="200"
                             Height="40"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="9,12"
                             FontSize="11"
                             Foreground="#CFCFCF"
                             TextChanged="AddListTextbox_TextChanged"/>

                    
                </Grid>
                
            </Border>
            
            
            
            <!--TODO: По нажатию этой кнопки добавить событие - сгенерировать новый радиобатн в списке-->

            <Button x:Name="AddListButton"
                    Height="20"
                    Width="20"
                    Margin="5"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Style="{StaticResource AddButtonTheme}"
                    Click="AddListButton_Click">
            </Button>

            <!--Создать карточку дела-->
            
            <Border CornerRadius="10"
                    Background="#353340"
                    Width="400" Height="40"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="-10,0,10,0">
                <Grid>
                    <TextBlock x:Name="TemplateCard"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Text="Создать карточку дела"
                                Margin="10,0,0,0"
                                FontSize="11"
                                Foreground="DarkGray"/>
                    <TextBox x:Name="AddCardTextbox"
                             Width="400"
                             Height="40"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="9,12"
                             FontSize="11"
                             Foreground="#CFCFCF"
                             TextChanged="AddCardTextbox_TextChanged"/>


                </Grid>

            </Border>
            
            <!--TODO: По нажатию этой кнопки добавить новую карточку в текущий список-->

            <Button x:Name="AddCardButton"
                    Height="20"
                    Width="20"
                    Margin="5"
                    Grid.Column="1"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Style="{StaticResource AddButtonTheme}"
                    Click="AddCardButton_Click">
            </Button>

            <!--Поиск-->
            

            <Border CornerRadius="10"
                    Background="#353340"
                    Width="400" Height="40"
                    Grid.Column="1"
                    Margin="-10,0,10,0">
                <Grid>
                    <TextBlock x:Name="TemplateSearch"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Text="Поиск"
                                Margin="10,0,0,0"
                                FontSize="11"
                                Foreground="DarkGray"/>
                    <TextBox x:Name="SearchTextbox"
                             Width="400"
                             Height="40"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="9,12"
                             FontSize="11"
                             Foreground="#CFCFCF"
                             TextChanged="SearchTextbox_TextChanged"/>


                </Grid>

            </Border>
            

            <!--По нажатию этой кнопки осуществить поиск по всем карточкам-->
            <Button x:Name="SearchButton"
                    Height="20"
                    Width="20"
                    Margin="5"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchButtonTheme}"
                    Click="SearchButton_Click">
            </Button>
            
        </Grid>

    </Border>
</Window>
